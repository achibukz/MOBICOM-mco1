<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for osmdroid -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Storage permissions based on API level -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- Network state for osmdroid -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".PinJournalApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PinJournal"
        tools:targetApi="31">

        <!-- Sign In Activity (Launcher) -->
        <activity
            android:name=".activities.Activity_SignIn"
            android:exported="true"
            android:theme="@style/Theme.PinJournal.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Sign Up Activity -->
        <activity
            android:name=".activities.Activity_SignUp"
            android:exported="false"
            android:theme="@style/Theme.PinJournal.NoActionBar" />

        <!-- Home Activity -->
        <activity
            android:name=".activities.Activity_Home"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- Add Entry Activity -->
        <activity
            android:name=".activities.Activity_AddEntry"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <!-- Map Activity -->
        <activity
            android:name=".activities.Activity_Map"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- Journal Activity -->
        <activity
            android:name=".activities.Activity_Journal"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- Profile Activity -->
        <activity
            android:name=".activities.Activity_Profile"
            android:exported="false" />

        <!-- Entry Detail Activity -->
        <activity
            android:name=".activities.Activity_EntryDetail"
            android:exported="false" />

        <!-- Location Search Activity -->
        <activity
            android:name=".activities.Activity_LocationSearch"
            android:exported="false"
            android:theme="@style/Theme.PinJournal.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Legacy MainActivity (remove later) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>