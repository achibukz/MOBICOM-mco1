<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <Button
            android:id="@+id/btnProfileBack"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="#009688"
            app:strokeWidth="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProfileUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15sp"
                    android:text="Username"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/etProfileUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingStart="20sp"
                    android:paddingTop="5sp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="3sp"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProfilePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15sp"
                    android:text="New Password"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/etProfilePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingStart="20sp"
                    android:paddingTop="5sp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="3sp"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Username -->

    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvThemeToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Dark Mode"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/text_primary"
            android:paddingStart="10dp" />

    </LinearLayout>

    <!-- Password (leave blank to keep current password) -->


    <TextView
        android:id="@+id/tvProfileFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:paddingStart="15sp"
        android:text="First Name"
        android:textColorHint="@color/text_primary" />

    <EditText
        android:id="@+id/etProfileFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:inputType="text"
        android:paddingStart="20sp"
        android:paddingTop="10sp"
        android:paddingEnd="20sp"
        android:paddingBottom="10sp"
        android:text=""
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tvProfileLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingStart="15sp"
        android:text="Last Name"
        android:textColor="@color/text_primary" />

    <EditText
        android:id="@+id/etProfileLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:inputType="text"
        android:paddingStart="20sp"
        android:paddingTop="10sp"
        android:paddingEnd="20sp"
        android:paddingBottom="10sp"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingStart="15sp"
        android:text="E-Mail"
        android:textColor="@color/text_primary" />

    <EditText
        android:id="@+id/etProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="20sp"
        android:paddingTop="10sp"
        android:paddingEnd="20sp"
        android:paddingBottom="10sp"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tvProfileMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingStart="15sp"
        android:text="Mobile"
        android:textColor="@color/text_primary" />

    <EditText
        android:id="@+id/etProfileMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:inputType="number"
        android:paddingStart="20sp"
        android:paddingTop="10sp"
        android:paddingEnd="20sp"
        android:paddingBottom="10sp"
        android:textColor="@color/text_secondary" />

    <!-- âœ… ADDED DARK/LIGHT MODE TOGGLE -->

    <Button
        android:id="@+id/btnProfileSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:background="@drawable/rounded_button"
        android:text="Save"
        android:textColor="@color/white" />

</LinearLayout>
